<Project Sdk="Microsoft.NET.Sdk">
	<Import Project="..\Common.Build.props" />

	<PropertyGroup>
		<TargetFrameworks>net6.0</TargetFrameworks>
		<UseMaui>true</UseMaui>
		<OutputPath>$(MSBuildThisFileDirectory)..\..\artifacts</OutputPath>
	</PropertyGroup>

	<PropertyGroup>
		<PackageId>DotNetMeteor.HotReload.Plugin</PackageId>
		<Summary>Hot Reload plugin designed for use with DotNet.Meteor</Summary>
		<Authors>NikitaRomanov</Authors>
		<NeutralLanguage>en</NeutralLanguage>
		<Product>DotNet.Meteor.HotReload.Plugin (net6.0)</Product>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<RepositoryUrl>https://github.com/JaneySprings/DotNet.Meteor</RepositoryUrl>
		<Title>DotNet.Meteor.HotReload.Plugin</Title>
		<Description>Hot Reload plugin designed for use with DotNet.Meteor. See https://github.com/JaneySprings/DotNet.Meteor</Description>
		<PackageIcon>logo.png</PackageIcon>
		<Product>$(AssemblyName) ($(TargetFramework))</Product>
		<AssemblyVersion>1.0.0</AssemblyVersion>
		<Version>1.0.0</Version>
		<PackageVersion>$(Version)$(VersionSuffix)</PackageVersion>
		<PackageTags>dotnet,maui,hotreload</PackageTags>
		<Configurations>Debug</Configurations>
		<AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>
	</PropertyGroup>

	<ItemGroup>
		<None Include="..\..\img\logo.png" PackagePath="logo.png" Pack="true" />
	</ItemGroup>

</Project>
