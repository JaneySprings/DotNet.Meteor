{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Extension",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "env": {
                // "METEOR_DEBUG_WAIT": "true"
            },
            "outFiles": [
                "${workspaceFolder}/extension/**/*.js"
            ],
            "preLaunchTask": "tsc: watch"
        },
        {
            "name": ".NET Attach to Debugger",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:dotrush-essentials.pickProcess}"
        },
        {
            "name": ".NET Attach to LSP",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:dotrush-essentials.pickProcess}"
        }
    ]
}