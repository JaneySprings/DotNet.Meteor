{
  "name": "dotnet-meteor",
  "publisher": "nromanov",
  "version": "1.0.0",
  "description": "Run and Debug .NET Apps",
  "displayName": ".NET Meteor",
  "author": "Nikita Romanov",
  "license": "MIT",
  "icon": "img/logo.png",
  "preview": false,
  "bugs": {
    "url": "https://github.com/JaneySprings/DotNet.Meteor/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JaneySprings/DotNet.Meteor.git"
  },
  "categories": [
    "Debuggers"
  ],
  "keywords": [
    "C#",
    ".NET",
    "MAUI",
    "dotnet"
  ],
  "activationEvents": [
    "onLanguage:csharp",
    "onLanguage:fsharp",
    "workspaceContains:**/*.{csproj,fsproj,sln,slnf,csx}"
  ],
  "engines": {
    "vscode": "^1.73.0"
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "tsc -watch -p ./src/VSCode.Extension/tsconfig.json",
    "package": "webpack --mode production"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.73.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "main": "./extension/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "%command.id.selectActiveProject%",
        "title": "%command.title.selectActiveProject%"
      },
      {
        "command": "%command.id.selectActiveConfiguration%",
        "title": "%command.title.selectActiveConfiguration%"
      },
      {
        "command": "%command.id.selectActiveDevice%",
        "title": "%command.title.selectActiveDevice%"
      }
    ],
    "taskDefinitions": [
      {
        "type": "%task.meteor.id%",
        "required": [],
        "properties": {
          "target": {
            "type": "string",
            "default": "build",
            "enum": [ "build", "publish" ],
            "description": "%task.meteor.description.target%"
          },
          "args": {
            "type": "array",
            "description": "%task.meteor.description.args%",
            "default": [],
            "items": {
              "type": "string"
            }
          }
        }
      }
    ],
    "problemMatchers": [
      {
        "name": "%task.meteor.problemMatcher%",
        "source": "%extension.displayName%",
        "fileLocation":"relative",
        "owner": "%extension.displayName%",
        "pattern": {
          "regexp": "^(.*.xaml)\\((\\d+),(\\d+)\\):.*?(error|warning)\\s(.*?):\\s(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "code": 5,
          "message": 6
        }
      }
    ],
    "breakpoints": [
      { 
        "language": "csharp" 
      },
      { 
        "language": "fsharp" 
      },
      { 
        "language": "razor" 
      },
      { 
        "language": "aspnetcorerazor" 
      }
    ],
    "debuggers": [
      {
        "type": "%debugger.meteor.id%",
        "label": "%debugger.meteor.title%",
        "languages": [
          "csharp",
          "fsharp",
          "razor",
          "aspnetcorerazor",
          "xaml",
          "xml"
        ],
        "program": "./extension/bin/net472/DotNet.Meteor.Debug.exe",
        "osx": {
          "runtime": "mono"
        },
        "linux": {
          "runtime": "mono"
        },
        "initialConfigurations": [
          {
            "name": "%debugger.meteor.title%",
            "type": "%debugger.meteor.id%",
            "request": "launch",
            "preLaunchTask": "%task.meteor.title%"
          }
        ],
        "configurationSnippets": [
          {
            "label": "%debugger.meteor.title%",
            "description": "%debugger.meteor.description%",
            "body": {
              "name": "%debugger.meteor.title%",
              "type": "%debugger.meteor.id%",
              "request": "launch",
              "preLaunchTask": "%task.meteor.title%"
            }
          }
        ],
        "configurationAttributes": {
          "launch": {
            "properties": {
              "device": {
                "type": "string",
                "description": "%debugger.meteor.device.description%"
              },
              "runtime": {
                "type": "string",
                "description": "%debugger.meteor.runtime.description%"
              }
            }
          }
        }
      }
    ],
    "configuration": {
      "title": "%configuration.title%",
      "properties": {
        "dotnetMeteor.monoSdbDebuggerPortAndroid": {
          "type": "integer",
          "default": 10000,
          "description": "%configuration.description.monoSdbDebuggerPortAndroid%"
        },
        "dotnetMeteor.monoSdbDebuggerPortApple": {
          "type": "integer",
          "default": 55551,
          "description": "%configuration.description.monoSdbDebuggerPortApple%"
        },
        "dotnetMeteor.hotReloadHostPort": {
          "type": "integer",
          "default": 9988,
          "description": "%configuration.description.hotReloadHostPort%"
        },
        "dotnetMeteor.uninstallApplicationBeforeInstalling": {
          "type": "boolean",
          "default": true,
          "description": "%configuration.description.uninstallApplicationBeforeInstalling%"
        }
      }
    }
  }
}
